<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="trading_platform.AppScreen.Api">
  <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" >
    <Grid ColumnDefinitions="Auto, 400" RowDefinitions="Auto, Auto, Auto">
      <TextBlock Grid.Row="0" Grid.Column="0" FontSize="18" Text="API Public Key" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10"/>
      <TextBox 
        Grid.Row="0" Grid.Column="1"
        Name="AppPublicKey"
        FontSize="18"
        VerticalAlignment="Center"
        HorizontalAlignment="Stretch"
        TextChanged="AppPublicKey_TextChanged"
        Margin="0 5"
      />
      <TextBlock Grid.Row="1" Grid.Column="0" FontSize="18" Text="API Secret Key" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10"/>
      <TextBox 
        Grid.Row="1" Grid.Column="1"
        Name="AppSecretKey"
        FontSize="18"
        VerticalAlignment="Center"
        HorizontalAlignment="Stretch"
        TextChanged="AppSecretKey_TextChanged"
        PasswordChar="*"
        Margin="0 5"
      />
    </Grid>
    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto">
      <Button
        Grid.Row="0" Grid.Column="0"
        HorizontalAlignment="Stretch"
        HorizontalContentAlignment="Center"
        FontSize="18"
        Click="IssueButton_Click"
        Background="ForestGreen"
        TextElement.Foreground="White"
        Margin="10 5"
      >
        API 접근 토큰 발급
      </Button>
      <Button
        Grid.Row="0" Grid.Column="1"
        HorizontalAlignment="Stretch"
        HorizontalContentAlignment="Center"
        FontSize="18"
        Click="RevokeButton_Click"
        Background="OrangeRed"
        TextElement.Foreground="White"
        Margin="0 5"
      >
        API 접근 토큰 폐기
      </Button>
    </Grid>
  </StackPanel>
</UserControl>
