<Styles xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:components="using:trading_platform.Components"
  xmlns:forms="using:trading_platform.Forms"
>
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
      <components:PriceDisplay />
      <forms:Order />
    </Border>
  </Design.PreviewWith>

  <Style Selector="GridSplitter">
    <Setter Property="Background" Value="Silver"/>
  </Style>
  
  <Style Selector=":is(AccessText), TextBlock">
    <Setter Property="FontSize" Value="12" />
    <Setter Property="FontFamily" Value="{StaticResource GowunDodum}" />
    <Style Selector=":is(AccessText).h1">
      <Setter Property="FontSize" Value="20" />
    </Style>
    <Style Selector=":is(AccessText).h2">
      <Setter Property="FontSize" Value="18" />
    </Style>
    <Style Selector=":is(AccessText).h3">
      <Setter Property="FontSize" Value="16" />
    </Style>
  </Style>
</Styles>
