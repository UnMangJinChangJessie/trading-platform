<Style
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Selector=":is(AccessText), TextBlock"
>
  <Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
  <Style Selector="^.h1">
    <Setter Property="FontSize" Value="{StaticResource XXLargeFontSize}" />
    <Setter Property="FontWeight" Value="Bold" />
  </Style>
  <Style Selector="^.h2">
    <Setter Property="FontSize" Value="{StaticResource XLargeFontSize}" />
    <Setter Property="FontWeight" Value="Bold" />
  </Style>
  <Style Selector="^.h3">
    <Setter Property="FontSize" Value="{StaticResource LargeFontSize}" />
    <Setter Property="FontWeight" Value="Bold" />
  </Style>
  <Style Selector="^.success">
    <Setter Property="Foreground" Value="{DynamicResource Green}" />
  </Style>
  <Style Selector="^.warning">
    <Setter Property="Foreground" Value="{DynamicResource Yellow}" />
  </Style>
  <Style Selector="^.error">
    <Setter Property="Foreground" Value="{DynamicResource Red}" />
  </Style>
</Style>