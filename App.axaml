<Application xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:cat="using:trading_platform.Styles.Catppuccin"
  xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
  xmlns:conv="using:trading_platform.Converters"
  x:Class="trading_platform.App"
>
  <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
  <Application.Resources>
    <FontFamily x:Key="MaterialDesignFonts">avares://trading-platform/Assets/Fonts#Gowun Dodum</FontFamily>
    <x:Double x:Key="FontSizeXXSmall">6</x:Double>
    <x:Double x:Key="FontSizeXSmall">8</x:Double>
    <x:Double x:Key="FontSizeSmall">10</x:Double>
    <x:Double x:Key="FontSizeMedium">12</x:Double>
    <x:Double x:Key="FontSizeLarge">16</x:Double>
    <x:Double x:Key="FontSizeXLarge">18</x:Double>
    <x:Double x:Key="FontSizeXXLarge">24</x:Double>
  </Application.Resources>
  <Application.Styles>
    <themes:MaterialTheme BaseTheme="Light" PrimaryColor="Pink" SecondaryColor="LightBlue" />
  </Application.Styles>
</Application>