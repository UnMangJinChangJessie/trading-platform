<Application xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:cat="using:trading_platform.Styles.Catppuccin"
  x:Class="trading_platform.App"
>
  <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
  <Application.Resources>
    <FontFamily x:Key="GowunDodum">
      avares://trading-platform/Assets/Fonts#Gowun Dodum
    </FontFamily>
    <x:Double x:Key="XXSmallFontSize" >8</x:Double>
    <x:Double x:Key="XSmallFontSize" >10</x:Double>
    <x:Double x:Key="SmallFontSize" >12</x:Double>
    <x:Double x:Key="MediumFontSize" >14</x:Double>
    <x:Double x:Key="LargeFontSize" >16</x:Double>
    <x:Double x:Key="XLargeFontSize" >20</x:Double>
    <x:Double x:Key="XXLargeFontSize" >24</x:Double>
    <Thickness x:Key="DefaultMargin" >2.5,2.5,2.5,2.5</Thickness>
    <Thickness x:Key="DefaultPadding" >5,5,5,5</Thickness>
    <CornerRadius x:Key="DefaultCornerRadius" >5,5,5,5</CornerRadius>
  </Application.Resources>
  <Application.Styles>
    <!-- <FluentTheme /> -->
    <StyleInclude Source="avares://trading-platform/Styles/Catppuccin/Theme.axaml" />
  </Application.Styles>
</Application>