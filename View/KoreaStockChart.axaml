<UserControl
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:v="using:trading_platform.View"
  xmlns:vm="using:trading_platform.ViewModel"
  xmlns:com="using:trading_platform.Components"
  x:DataType="vm:KoreaStockChart"
  x:Class="trading_platform.View.KoreaStockChart"
  d:DesignHeight="720" d:DesignWidth="1000"
>
  <Grid ColumnDefinitions="*,180,180" RowDefinitions="*" Margin="5">
    <Grid
      Grid.Column="0"
      ColumnDefinitions="*" RowDefinitions="Auto, 100, *, Auto"
    >
      <StackPanel Grid.Row="0" Orientation="Horizontal" FlowDirection="LeftToRight">
        <TextBox Name="TickerTextBox" Watermark="종목코드" Text="{Binding Ticker}" Width="200" Padding="2.5" >
          <TextBox.InnerRightContent>
            <Button Click="TickerInquireButton_Click">조회</Button>
          </TextBox.InnerRightContent>
        </TextBox>
      </StackPanel>
      <com:PriceDisplay
        Name="PriceDisplay"
        Grid.Row="1"
      />
      <com:CandlestickChart
        Name="OHLCChart"
        Grid.Row="2"
        VerticalAlignment="Stretch"
      />
    </Grid>
    <com:OrderBookDisplay
      Grid.Column="1"
    />
    <v:DomesticStockOrderView
      Name="OrderView"
      Grid.Column="2"
    />
  </Grid>
</UserControl>