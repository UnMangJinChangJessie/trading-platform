<UserControl
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:v="using:trading_platform.View"
  xmlns:vmkis="using:trading_platform.ViewModel.KoreaInvestment"
  xmlns:com="using:trading_platform.Components"
  xmlns:comkis="using:trading_platform.Components.KoreaInvestment"
  d:DesignHeight="720" d:DesignWidth="1000"
  x:Class="trading_platform.View.KoreaStockChart"
  x:DataType="vmkis:StockMarketData"
  x:Name="ControlRoot"
  AttachedToVisualTree="UserControl_AttachedToVisualTree"
  DetachedFromVisualTree="UserControl_DetachedFromVisualTree"
  Loaded="UserControl_Loaded"
>
  <Grid ColumnDefinitions="*,180,200" RowDefinitions="*" Margin="5">
    <Grid
      Grid.Column="0"
      ColumnDefinitions="*" RowDefinitions="Auto, 100, *, Auto"
    >
      <StackPanel Grid.Row="0" Orientation="Horizontal" FlowDirection="LeftToRight">
        <TextBox Name="TickerTextBox" Watermark="종목코드" Width="200" Padding="2.5" >
          <TextBox.InnerRightContent>
            <Button Click="TickerInquireButton_Click">조회</Button>
          </TextBox.InnerRightContent>
        </TextBox>
      </StackPanel>
      <com:PriceDisplay
        Name="PriceDisplay"
        DataContext="{Binding #ControlRoot.DataContext}"
        Grid.Row="1"
      />
      <com:CandlestickChart
        Name="OHLCChart"
        DataContext="{Binding #ControlRoot.DataContext.PriceChart}"
        Grid.Row="2"
        VerticalAlignment="Stretch"
      />
    </Grid>
    <com:OrderBookDisplay
      Name="OrderBookDisplayView"
      DataContext="{Binding CurrentOrderBook}"
      PriceDecimalPoint="0"
      QuantityDecimalPoint="0"
      Grid.Column="1"
    />
    <StackPanel Grid.Column="2" Orientation="Vertical" >
      <comkis:Account
        DataContext="{Binding CurrentOrder}"
      />
      <v:Order
        Name="OrderView"
        DataContext="{Binding CurrentOrder}"
      />
    </StackPanel>
  </Grid>
</UserControl>