<UserControl
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:com="using:trading_platform.Components"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:vm="using:trading_platform.ViewModel"
  xmlns:local="using:trading_platform"
  d:DesignHeight="36" d:DesignWidth="200"
  x:Class="trading_platform.Components.OrderBookQuantityBlock"
  Loaded="UserControl_Loaded"
  x:DataType="vm:KoreaInvestment.StockOrderBook"
  DataContext="{Binding $parent[com:OrderBookDisplay].DataContext}"
  x:Name="ControlRoot"
>
  <Panel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
    <Rectangle
      Name="PART_Rectangle"
      VerticalAlignment="Center" 
      Width="{Binding #ControlRoot.BarWidth, Mode = OneWay}"
    />
    <TextBlock 
      Name="PART_TextBlock"
      Text="{Binding #ControlRoot.Quantity}"
      IsVisible="{Binding #ControlRoot.Quantity, Converter={x:Static ObjectConverters.IsNotNull}}"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
    >
    </TextBlock>
  </Panel>
</UserControl>