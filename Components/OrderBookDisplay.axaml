<UserControl
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:com="using:trading_platform.Components"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:vm="using:trading_platform.ViewModel"
  x:Class="trading_platform.Components.OrderBookDisplay"
  x:DataType="vm:OrderBook"
  d:DesignHeight="720" d:DesignWidth="200"
  Loaded="UserControl_Loaded"
>
  <UserControl.DataContext>
    <vm:OrderBook />
  </UserControl.DataContext>
  <ScrollViewer
    Margin="5"
  >
    <Grid
      Name="PART_Grid"
      ColumnDefinitions="*,1.5*,*"
      RowDefinitions="*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*"
    >
      <!-- 매도 수량 -->
      <com:OrderBookQuantityBlock 
        Grid.Row="0" Grid.Column="0"
        IsSelling="True"
        OrderViewIndex="9"
      />
      <com:OrderBookQuantityBlock 
        Grid.Row="1" Grid.Column="0"
        IsSelling="True"
        OrderViewIndex="8"
      />
      <com:OrderBookQuantityBlock 
        Grid.Row="2" Grid.Column="0"
        IsSelling="True"
        OrderViewIndex="7"
      />
      <com:OrderBookQuantityBlock 
        Grid.Row="3" Grid.Column="0"
        IsSelling="True"
        OrderViewIndex="6"
      />
      <com:OrderBookQuantityBlock 
        Grid.Row="4" Grid.Column="0"
        IsSelling="True"
        OrderViewIndex="5"
      />
      <com:OrderBookQuantityBlock 
        Grid.Row="5" Grid.Column="0"
        IsSelling="True"
        OrderViewIndex="4"
      />
      <com:OrderBookQuantityBlock 
        Grid.Row="6" Grid.Column="0"
        IsSelling="True"
        OrderViewIndex="3"
      />
      <com:OrderBookQuantityBlock 
        Grid.Row="7" Grid.Column="0"
        IsSelling="True"
        OrderViewIndex="2"
      />
      <com:OrderBookQuantityBlock 
        Grid.Row="8" Grid.Column="0"
        IsSelling="True"
        OrderViewIndex="1"
      />
      <com:OrderBookQuantityBlock 
        Grid.Row="9" Grid.Column="0"
        IsSelling="True"
        OrderViewIndex="0"
      />
      <!-- 매도 호가 -->
      <TextBlock
        Grid.Row="0" Grid.Column="1"
        Text="{Binding SellingPrices[9]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Row="1" Grid.Column="1"
        Text="{Binding SellingPrices[8]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Row="2" Grid.Column="1"
        Text="{Binding SellingPrices[7]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Row="3" Grid.Column="1"
        Text="{Binding SellingPrices[6]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Row="4" Grid.Column="1"
        Text="{Binding SellingPrices[5]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Row="5" Grid.Column="1"
        Text="{Binding SellingPrices[4]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Row="6" Grid.Column="1"
        Text="{Binding SellingPrices[3]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Row="7" Grid.Column="1"
        Text="{Binding SellingPrices[2]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Row="8" Grid.Column="1"
        Text="{Binding SellingPrices[1]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Row="9" Grid.Column="1"
        Text="{Binding SellingPrices[0]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <!-- 매수 호가 -->
      <TextBlock
        Grid.Row="10" Grid.Column="1"
        Text="{Binding BuyingPrices[0]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Row="11" Grid.Column="1"
        Text="{Binding BuyingPrices[1]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Row="12" Grid.Column="1"
        Text="{Binding BuyingPrices[2]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Row="13" Grid.Column="1"
        Text="{Binding BuyingPrices[3]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Row="14" Grid.Column="1"
        Text="{Binding BuyingPrices[4]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Row="15" Grid.Column="1"
        Text="{Binding BuyingPrices[5]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Row="16" Grid.Column="1"
        Text="{Binding BuyingPrices[6]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Row="17" Grid.Column="1"
        Text="{Binding BuyingPrices[7]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Row="18" Grid.Column="1"
        Text="{Binding BuyingPrices[8]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <TextBlock
        Grid.Row="19" Grid.Column="1"
        Text="{Binding BuyingPrices[9]}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
      />
      <!-- 매수 수량 -->
      <com:OrderBookQuantityBlock 
        Grid.Row="10" Grid.Column="2"
        IsSelling="False"
        OrderViewIndex="0"
      />
      <com:OrderBookQuantityBlock 
        Grid.Row="11" Grid.Column="2"
        IsSelling="False"
        OrderViewIndex="1"
      />
      <com:OrderBookQuantityBlock 
        Grid.Row="12" Grid.Column="2"
        IsSelling="False"
        OrderViewIndex="2"
      />
      <com:OrderBookQuantityBlock 
        Grid.Row="13" Grid.Column="2"
        IsSelling="False"
        OrderViewIndex="3"
      />
      <com:OrderBookQuantityBlock 
        Grid.Row="14" Grid.Column="2"
        IsSelling="False"
        OrderViewIndex="4"
      />
      <com:OrderBookQuantityBlock 
        Grid.Row="15" Grid.Column="2"
        IsSelling="False"
        OrderViewIndex="5"
      />
      <com:OrderBookQuantityBlock 
        Grid.Row="16" Grid.Column="2"
        IsSelling="False"
        OrderViewIndex="6"
      />
      <com:OrderBookQuantityBlock 
        Grid.Row="17" Grid.Column="2"
        IsSelling="False"
        OrderViewIndex="7"
      />
      <com:OrderBookQuantityBlock 
        Grid.Row="18" Grid.Column="2"
        IsSelling="False"
        OrderViewIndex="8"
      />
      <com:OrderBookQuantityBlock 
        Grid.Row="19" Grid.Column="2"
        IsSelling="False"
        OrderViewIndex="9"
      />
    </Grid>
  </ScrollViewer>
</UserControl>